{
  "name": "qq-webhook-pro",
  "private": true,
  "version": "2.0.0",
  "description": "QQ机器人Webhook转WebSocket服务，提供实时消息转发和管理界面",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently \"pnpm server:dev\" \"pnpm client:dev\"",
    "dev:optimized": "concurrently \"pnpm server:dev:optimized\" \"pnpm client:dev\"",
    "client:dev": "vite",
    "server:dev": "tsx watch server/index.ts",
    "server:dev:optimized": "tsx watch server/index-optimized.ts",
    "build": "rimraf dist && pnpm server:build && pnpm client:build",
    "client:build": "vite build",
    "server:build": "tsc -p server/tsconfig.json",
    "start": "node dist/server/index.js",
    "start:optimized": "node dist/server/index-optimized.js",
    "start:dev": "tsx server/index.ts",
    "start:dev:optimized": "tsx server/index-optimized.ts",
    "lint": "eslint src server --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src server --ext .ts,.tsx --fix",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules",
    "reinstall": "pnpm clean && pnpm install",
    "test:connections": "tsx server/test-connections.ts",
    "benchmark": "tsx server/benchmark.ts"
  },
  "dependencies": {
    "@arco-design/web-react": "^2.66.1",
    "@noble/ed25519": "^2.2.3",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@arco-plugins/vite-react": "^1.3.3",
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.0.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "nodemon": "^3.1.10",
    "only-allow": "^1.2.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
